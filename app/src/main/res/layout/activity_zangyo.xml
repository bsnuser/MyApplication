                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:gravity="left|center"
                            android:text="残業日"
                            android:textSize="16sp"
                            android:layout_toRightOf = "@+id/textView3"/>

