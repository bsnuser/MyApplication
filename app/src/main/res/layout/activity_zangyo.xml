            </ScrollView>

                    <TextView
                        android:id="@+id/zangyo_all_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="残業総時間：　９９時９９分"
                        android:layout_below = "@+id/zangyo_Scroll_View"
                        />

                    <TextView
                        android:id="@+id/kyukei_all_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="休憩総時間合計："
                        android:layout_below = "@+id/zangyo_all_time"
                        />

                    <TextView
                        android:id="@+id/zangyo_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="実残業時間："
                        android:layout_below = "@+id/kyukei_all_time"
                        />

                <Button
                    android:id="@+id/shinseiButton"
                    style="@style/ShinseiButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:layout_below = "@+id/zangyo_time"
                    android:layout_centerHorizontal = "true"
                    />

                <TextView
                    android:id="@+id/textShinsei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="申請"
                    android:textSize="20sp"
                    android:layout_below="@+id/shinseiButton"
                    android:layout_centerHorizontal = "true"
                    />



        <FrameLayout
            android:id="@+id/touch_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
