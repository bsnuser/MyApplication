<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorString</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--基本-->
    <style name="CommonTheme" parent="AppTheme">
        <item name="android:background">@color/colorBackGround</item>
    </style>

    <!--EditText-->
    <style name="EditTextStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorString</item>
        <item name="colorControlActivated">@color/colorString</item>
        <item name="colorPrimary">@color/colorString</item>
        <item name="colorPrimaryDark">@color/colorString</item>
        <item name="colorAccent">@color/colorString</item>
        <item name="android:textColor">@color/colorString</item>
        <item name="android:textColorHint">@color/colorString</item>
        <item name="android:textSize">16dp</item>
        <item name="android:editTextColor">@color/colorString</item>
    </style>

    <!--RadioButton-->
    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorString</item>
    </style>

    <!--ログイン画面のボタン-->
    <style name="LoginButtonStyle" parent="MyButtonStyle">
        <item name="android:background">@drawable/iconlogin</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <!--メインメニューのボタン-->
    <style name="MainMenuSyukkinButtonStyle" parent="MyButtonStyle">
    <item name="android:background">@drawable/iconshukkin</item>
    </style>
    <style name="MainMenuZangyoButtonStyle" parent="MyButtonStyle">
        <item name="android:background">@drawable/iconzangyo</item>
    </style>
    <style name="MainMenuYukyuButtonStyle" parent="MyButtonStyle">
        <item name="android:background">@drawable/iconyukyu</item>
    </style>
    <style name="MainMenuRirekiButtonStyle" parent="MyButtonStyle">
        <item name="android:background">@drawable/iconrireki</item>
    </style>

    <!-- 各画面のボタン -->
    <style name="CalendarButtonStyle" parent="MyButtonStyle">
        <item name="android:background">@drawable/iconcalender</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <style name="ShinseiButtonStyle" parent="MyButtonStyle">
        <item name="android:background">@drawable/iconshinsei</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <!-- 旧　-->
    <!-- ボタン　基本とする -->
    <style name="MyButtonStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- 申請ボタン -->
    <style name="ApplyButtonStyle" parent="MyButtonStyle">
        <item name="android:text">@string/btn_apply</item>
        <item name="android:background">@drawable/btn_apply</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 日付変更ボタン -->
    <style name="ChangeDateButtonStyle" parent="MyButtonStyle">
        <!-- <item name="android:text">@string/btn_changeDate</item> -->
        <item name="android:background">@drawable/calendarholl</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
